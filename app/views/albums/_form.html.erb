<%= form_for @album, :html => {:multipart => true} do |f| %>
  <% if album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
      <% album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :band %>
    <%= f.text_field :band %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :cols => "50", :rows => "10" %>
  </div>

  <div class="field">
    <%= f.label :cover_image %>
    <%= f.file_field :cover_image %>
  </div>

  <%= f.fields_for :songs do |section| %>
      <%= section.label :title %>
      <%= section.text_field :title %>
      <%= section.label :audio %>
      <%= section.file_field :audio %>
  <% end %>

  <div class="actions">
    <%= f.submit "submit"%>
  </div>
<% end %>
