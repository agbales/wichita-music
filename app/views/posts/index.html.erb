<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Cover</th>
      <th>Band</th>
      <th>Title</th>
      <th>Description</th>
      <th>Year</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to image_tag(post.cover_image_url(:thumb)), post if post.cover_image? %></td>
        <td><%= post.band %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.year %></td>
        <td><%= post.user.user_name %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.user == current_user %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
