<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Cover</th>
      <th>Band</th>
      <th>Title</th>
      <th>Year</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to image_tag(post.cover_image_url(:thumb)), post if post.cover_image? %></td>
        <td><%= post.band %></td>
        <td><%= post.title %></td>
        <td><%= post.year %></td>
        <td><%= post.user.user_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Post', new_post_path, {:action => "new", :controller => "posts", :method => :get} %>
